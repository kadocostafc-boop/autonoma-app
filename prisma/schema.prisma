generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// ////////////////////////////////////////////////////////////
/// ////////////////////////////////////////////////////////////
model Usuario {
  id                  Int           @id @default(autoincrement())
  nome                String
  email               String        @unique
  senha               String
  tipo                String
  criadoEm            DateTime      @default(now())
  profissional        Profissional?
  assinaturas         Assinatura[]
  pagamentosViaApp    PagamentoViaApp[]
}

/// ////////////////////////////////////////////////////////////
/// ////////////////////////////////////////////////////////////
model Profissional {
  id                  Int         @id @default(autoincrement())
  usuarioId           Int         @unique
  nome                String
  idade               Int
  tempoExperiencia    Int
  fotoUrl             String?
  descricao           String?
  criadoEm            DateTime    @default(now())
  plano               String      @default("free") // free, pro, premium
  validadePlano       DateTime?
  statusAssinatura    String      @default("cancelada") // ativa, pendente, cancelada
  totalLeadsMes       Int         @default(0)
  limiteLeadsMes      Int         @default(3)
  usaPagamentoViaApp  Boolean     @default(false)
  assinaturaAsaasId   String?
  avaliacoes          Avaliacao[]
  endereco            Endereco?
  mensagens           Mensagem[]
  usuario             Usuario     @relation(fields: [usuarioId], references: [id])
  servicos            Servico[]
}

/// ////////////////////////////////////////////////////////////
/// ////////////////////////////////////////////////////////////
model Endereco {
  id             Int          @id @default(autoincrement())
  profissionalId Int          @unique
  cidade         String
  bairro         String
  estado         String
  latitude       Float?
  longitude      Float?
  profissional   Profissional @relation(fields: [profissionalId], references: [id])
}

/// ////////////////////////////////////////////////////////////
/// ////////////////////////////////////////////////////////////
model Categoria {
  id       Int       @id @default(autoincrement())
  nome     String    @unique
  servicos Servico[]
}

/// ////////////////////////////////////////////////////////////
/// ////////////////////////////////////////////////////////////
model Servico {
  id             Int          @id @default(autoincrement())
  profissionalId Int
  categoriaId    Int
  titulo         String
  descricao      String
  preco          Float
  publicado      Boolean      @default(true)
  criadoEm       DateTime     @default(now())
  categoria      Categoria    @relation(fields: [categoriaId], references: [id])
  profissional   Profissional @relation(fields: [profissionalId], references: [id])
}

/// ////////////////////////////////////////////////////////////
/// ////////////////////////////////////////////////////////////
model Avaliacao {
  id             Int          @id @default(autoincrement())
  profissionalId Int
  nota           Int
  comentario     String?
  clienteNome    String
  criadoEm       DateTime     @default(now())
  profissional   Profissional @relation(fields: [profissionalId], references: [id])
}

/// ////////////////////////////////////////////////////////////
/// ////////////////////////////////////////////////////////////
model Mensagem {
  id             Int          @id @default(autoincrement())
  profissionalId Int
  nomeCliente    String
  contato        String
  mensagem       String
  respondido     Boolean      @default(false)
  criadoEm       DateTime     @default(now())
  profissional   Profissional @relation(fields: [profissionalId], references: [id])
}

/// ////////////////////////////////////////////////////////////
/// ////////////////////////////////////////////////////////////
model Assinatura {
  id                  Int      @id @default(autoincrement())
  usuarioId           Int
  usuario             Usuario  @relation(fields: [usuarioId], references: [id])
  plano               String   // free, pro, premium
  statusAssinatura    String   @default("cancelada") // ativa, pendente, cancelada
  validadePlano       DateTime?
  assinaturaAsaasId   String?  @unique
  criadoEm            DateTime @default(now())
  atualizadoEm        DateTime @updatedAt
  @@index([usuarioId])
}

model PagamentoViaApp {
  id                  Int      @id @default(autoincrement())
  usuarioId           Int
  usuario             Usuario  @relation(fields: [usuarioId], references: [id])
  profissionalId      Int
  valor               Float
  taxa                Float    @default(0.04) // 4%
  valorComTaxa        Float
  status              String   @default("pendente") // pendente, concluido, cancelado
  criadoEm            DateTime @default(now())
  atualizadoEm        DateTime @updatedAt
  @@index([usuarioId])
  @@index([profissionalId])
}
